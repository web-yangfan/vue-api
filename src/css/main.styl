.modal-box
  position: fixed
  width: 100%
  height: 100%
  background: rgba(0,0,0,.5)
  display: flex
  justify-content: center
  .content-box
    width: 900px
    margin: 20px 0
    background: #fff
    padding: 20px
    overflow-y: auto
    .container
      font-size: 14px
      .demo-box
        border: 1px solid #eee
        border-radius: 2px
        padding: 25px 35px
        margin-bottom: 50px
      pre
        padding: 0
        margin: 0
        position: relative
        margin-bottom: 20px
        .hljs
          font-family: Menlo, Monaco, Consolas, Courier, monospace
        code.css
         &:after
           content: 'css'
           position: absolute
           padding: 5px 10px 0
           top: 20px
           right: 0
           font-size: 12px
           color: #ccc
           text-align: right
        code.javascript
          &:after
            content: 'js'
            position: absolute
            padding: 5px 10px 0
            top: 20px
            right: 0
            font-size: 12px
            color: #ccc
            text-align: right
        code.html
          &:after
            content: 'html'
            position: absolute
            padding: 5px 10px 0
            top: 20px
            right: 0
            font-size: 12px
            color: #ccc
            text-align: right
      pre.mb48
        margin-bottom: -48px
      h3
        margin-bottom: 10px
        color: #287BDE
        font-size: 20px
      h4
        margin-bottom: 10px
        font-size: 14px
        color: #e96900
      h5
        color: #932011
        font-size: 14px
        font-weight: bold
      ul
        margin-bottom: 10px
        li
          padding: 2px 0
          font-size: 14px
          ol
            padding: 0 0 0 42px
            li
              list-style-type:circle
          strong
            margin-right: 5px
          code
            background-color: #f8f8f8
            font-size: 12px
            color: #e96900
            padding: 3px 5px
            margin: 0 2px
            border-radius: 2px
            white-space: nowrap
            font-family: 'Roboto Mono', Monaco, courier, monospace

  .close-btn
    z-index: 2
    border: 1px solid silver
    background-color: white
    border-radius: 50%
    font-size: 35px
    width: 50px
    height: 50
    position: absolute
    top: 5px
    right: 5px
    outline: none
    cursor: pointer
    font-family: Arial, sans-serif
    &:hover
      color: white
      background-color: black
.menu-root
  padding: 10px
  padding-bottom: 0
  column-gap: 10px
  column-count: 8
  & > li
    background-color: #eee
    padding: 10px
    width: 100%
    margin-bottom: 5px
    border-radius: 10px
    display: block
    break-inside: avoid
    overflow: hidden
    & > a
      color: #000
      small
        float: right
        font-size: 14px
        color: #343D46
  a
    border-radius: 10px
    padding: 5px
    text-decoration: none
    color: inherit
    display: block
    cursor: default
    outline: none
    color: #e6e6e6
    cursor: pointer

.menu-root ul li:nth-child(odd) a
  background-color: rgba(0,0,0,0.05)
.menu-root ul li a:hover, .menu-root ul li a:focus
  background-color: rgba(255,255,255,0.1)
  color: black

.menu-root > li:nth-child(1),
.menu-root > li:nth-child(2)
  background-color: #C594C5

.menu-root > li:nth-child(3),
.menu-root > li:nth-child(4),
.menu-root > li:nth-child(5),
.menu-root > li:nth-child(6),
.menu-root > li:nth-child(7),
.menu-root > li:nth-child(8)
  background-color: #F99157

.menu-root > li:nth-child(9),
.menu-root > li:nth-child(10),
.menu-root > li:nth-child(11)
  background-color: #5FB3B3
.menu-root > li:nth-child(12)
  background-color: #6699CC
.menu-root > li:nth-child(13)
  background-color: #EC5f67
.menu-root > li:nth-child(14)
  background-color: #EC5f67
.menu-root > li:nth-child(15)
  background-color: #EAB853
.menu-root > li:nth-child(16)
  background-color: #89B784
.menu-root > li.modifiers
  background-color: #AB7967
.menu-root ul li a small
  color: #C0C5CE
  pointer-events: none

@media (max-width : 480px) {
  .menu-root {
    column-count: 2;
  }
}

@media (min-width : 481px) and (max-width : 767px) {
  .menu-root {
    column-count: 3;
  }
}

@media (min-width : 768px) and (max-width : 1023px) {
  .menu-root {
    column-count: 4;
  }
}

@media (min-width : 1024px) and (max-width : 1279px) {
  .menu-root {
    column-count: 5;
  }
  .menu-root ul li a {
    padding: 2px 5px;
  }
}

@media (min-width : 1280px) and (max-width : 1439px) {
  .menu-root {
    column-count: 6;
  }
  .menu-root ul li a {
    padding: 3px 5px;
  }
}

@media (min-width : 1440px) and (max-width : 1679px) {
  .menu-root {
    column-count: 7;
  }
}

@media (min-width : 1680px) and (max-width : 1919px) {
  .menu-root {
    column-count: 8;
    font-size: 18px;
  }
}
